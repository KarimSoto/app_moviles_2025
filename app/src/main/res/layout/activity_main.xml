<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!--  Barra de bÃºsqueda  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_bar_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/boton_buscar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@android:color/darker_gray"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />


            <EditText
                android:id="@+id/barra_busqueda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!--  TÃ­tulo â€œMis Materiasâ€ y botÃ³n â€œVer todo" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textMateriasTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mis Materias"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonVerTodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver todo" />
        </LinearLayout>

        <!-- ðŸ“‹ RecyclerView de materias -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMaterias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textTareasTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mis Tareas"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonVerTodasTareas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver todo" />
        </LinearLayout>


        <!-- ðŸ“š RecyclerView de tareas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTareas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/redireccionarMateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materia +" />

        <Button
            android:id="@+id/redireccionarTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarea +" />


        <Button
            android:id="@+id/ButtonCompletados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completados" />

        <Button
            android:id="@+id/ButtonPendientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendientes" />

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home" />

    </LinearLayout>

</ScrollView>
